#!/usr/bin/env python

from setuptools import setup
import hpcdo
import argparse
import json

# functions
def usage(args):
  print "getting usage on hpc"

def submit(args):
  print "submitting job to the scheduler"

  # get job list, for now we look in current folder

  # get job description
  jd  = JobDescriptions().reload()
